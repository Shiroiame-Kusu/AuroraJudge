# =============================================================================
# AuroraJudge Judger 配置文件
# =============================================================================

# -----------------------------------------------------------------------------
# Judger 运行模式
# http: 使用 HTTP API 与 Backend 通信 (推荐)
# rabbitmq: 使用 RabbitMQ 消息队列 (旧版)
# -----------------------------------------------------------------------------
[judger]
mode = http
name = judger-1
work_dir = /tmp/aurora-judge
max_concurrent_tasks = 4

# -----------------------------------------------------------------------------
# HTTP 模式配置
# 在 Backend 管理面板注册 Judger 后获取凭证
# 注册 API: POST /api/judger/register
# -----------------------------------------------------------------------------
[http]
backend_url = http://localhost:5000
judger_id = 
secret = 
poll_interval_ms = 1000

# -----------------------------------------------------------------------------
# RabbitMQ 模式配置 (当 mode = rabbitmq 时使用)
# -----------------------------------------------------------------------------
[rabbitmq]
connection = amqp://guest:guest@localhost:5672

# -----------------------------------------------------------------------------
# 日志配置
# level 可选值: Trace, Debug, Information, Warning, Error, Critical
# -----------------------------------------------------------------------------
[logging]
level = Information
